{
  "name": "create-svelte-electron-app",
  "version": "1.2.0",
  "description": "The boilerplate code to get started creating Cross-platform Desktop Apps with Electron and Svelte as front-end technology.",
  "private": false,
  "license": "MIT",
  "main": "main.js",
  "author": "Souleh Shaikh <soulehshaikh99@gmail.com>",
  "build": {
    "icon": "public/favicon.png",
    "productName": "Svelte and Electron App",
    "files": [
      "public/**/*",
      "main.js",
      "preload.js"
    ],
    "win": {},
    "linux": {},
    "mac": {}
  },
  "scripts": {
    "build": "rollup -c --bundleConfigAsCjs",
    "dev": "rollup -c -w --bundleConfigAsCjs",
    "start": "sirv public --no-clear",
    "electron": "wait-on http://localhost:8080 && electron .",
    "start:server": "nodemon --watch server --ext js,json --exec \"ts-node server/dev-server.ts\"",
    "electron-dev": "concurrently \"bun run dev\" \"bun run electron\" \"bun run start:server\"",
    "preelectron-pack": "bun run build",
    "electron-pack": "electron-builder",
    "check": "svelte-check --tsconfig ./tsconfig.json"
  },
  "dependencies": {
    "@types/express": "^4.17.21",
    "electron-serve": "^1.1.0",
    "express": "^4.19.2",
    "rollup-plugin-postcss": "^4.0.2",
    "ws": "^8.18.0",
    "ogi-addon": "*"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^23.0.2",
    "@rollup/plugin-node-resolve": "^15.0.1",
    "@rollup/plugin-typescript": "^11.1.6",
    "@tsconfig/svelte": "^5.0.4",
    "@types/sass": "^1.45.0",
    "autoprefixer": "^10.4.19",
    "concurrently": "^7.5.0",
    "electron": "^21.2.0",
    "electron-builder": "^23.6.0",
    "nodemon": "^3.1.4",
    "postcss-loader": "^8.1.1",
    "rollup": "^3.2.3",
    "rollup-plugin-css-only": "^4.2.0",
    "rollup-plugin-livereload": "^2.0.5",
    "rollup-plugin-svelte": "^7.1.0",
    "rollup-plugin-terser": "^7.0.2",
    "sirv-cli": "^2.0.2",
    "svelte": "^3.52.0",
    "svelte-check": "^2.0.0",
    "svelte-preprocess": "^6.0.1",
    "tailwindcss": "^3.4.4",
    "ts-node": "^10.9.2",
    "tslib": "^2.0.0",
    "wait-on": "^6.0.1"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  }
}