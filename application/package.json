{
  "name": "opengameinstaller-gui",
  "version": "2.8.1",
  "description": "The front-facing GUI for OpenGameInstaller and the addon-server.",
  "type": "module",
  "private": false,
  "license": "MIT",
  "main": "./out/main/index.js",
  "author": "Nat3z",
  "build": {
    "icon": "public/favicon.ico",
    "productName": "OpenGameInstaller",
    "extends": null,
    "files": [
      "public/**/*",
      "out/**/*",
      "node_modules/**/*"
    ],
    "win": {},
    "linux": {
      "icon": "public/favicon-256x256.png",
      "target": [
        "AppImage"
      ],
      "category": "Development",
      "artifactName": "${productName}-linux-pt.${ext}"
    },
    "mac": {}
  },
  "scripts": {
    "build": "electron-vite build",
    "build:ogiaddon": "cd ../packages/ogi-addon/ && bun x tsdown && cd ../real-debrid/ && bun x tsdown && cd ../all-debrid/ && bun x tsdown",
    "dev": "bun run build:ogiaddon && ELECTRON_EXEC_PATH=\"$(node -p \"require('electron')\" )\" electron-vite dev",
    "preview": "electron-vite preview",
    "dev:server": "nodemon --watch server --ext ts,json --exec \"tsc --p tsconfig.addonserver.json && bun run --bun build-addons/dev-server.js\"",
    "preelectron-pack": "bun run build:ogiaddon && bun run build",
    "electron-pack": "electron-builder",
    "electron-pack:linux": "electron-builder -l",
    "check": "bun run build:ogiaddon && svelte-check --tsconfig ./tsconfig.svelte.json",
    "typecheck": "bun run typecheck:svelte && bun run typecheck:electron && bun run typecheck:addonserver",
    "typecheck:svelte": "svelte-check --tsconfig ./tsconfig.svelte.json",
    "typecheck:electron": "tsc -p tsconfig.electron.json --noEmit",
    "typecheck:addonserver": "tsc -p tsconfig.addonserver.json --noEmit",
    "rebuild": "npm rebuild"
  },
  "dependencies": {
    "@ctrl/qbittorrent": "^9.11.0",
    "@electron/remote": "^2.1.3",
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.25",
    "all-debrid-js": "workspace:*",
    "axios": "^1.13.4",
    "cors": "^2.8.6",
    "create-torrent": "^6.1.0",
    "d3": "^7.9.0",
    "express": "^4.22.1",
    "fuse.js": "^7.1.0",
    "ogi-addon": "workspace:*",
    "parse-torrent": "^11.0.19",
    "real-debrid-js": "*",
    "sanitize-html": "^2.17.0",
    "semver": "^7.7.3",
    "steamworks.js": "^0.4.0",
    "webtorrent": "^2.8.5",
    "ws": "^8.19.0",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@sveltejs/vite-plugin-svelte": "^5.1.1",
    "@tailwindcss/vite": "^4.1.18",
    "@tsconfig/svelte": "^5.0.6",
    "@types/d3": "^7.4.3",
    "@types/node": "^22.15.0",
    "@types/parse-torrent": "^5.8.8",
    "@types/sanitize-html": "^2.16.0",
    "@types/semver": "^7.7.1",
    "@types/webtorrent": "^0.110.1",
    "@types/ws": "^8.18.1",
    "concurrently": "^7.6.0",
    "debug": "^4.4.3",
    "electron": "^40.1.0",
    "electron-builder": "^23.6.0",
    "electron-vite": "^5.0.0",
    "nodemon": "^3.1.11",
    "svelte": "^5.49.1",
    "svelte-check": "^4.3.6",
    "tailwindcss": "^4.1.18",
    "ts-node": "^10.9.2",
    "tslib": "^2.8.1",
    "vite": "^6.4.1",
    "wait-on": "^6.0.1"
  },
  "peerDependencies": {
    "typescript": "^5.9.3",
    "undici": "^7.16.0",
    "undici-types": "^7.16.0"
  },
  "trustedDependencies": [
    "electron"
  ]
}
