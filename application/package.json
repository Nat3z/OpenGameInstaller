{
  "name": "opengameinstaller-gui",
  "version": "1.2.2",
  "description": "The front-facing GUI for OpenGameInstaller and the addon-server.",
  "type": "module",
  "private": false,
  "license": "MIT",
  "main": "./build/main.js",
  "author": "Nat3z",
  "build": {
    "icon": "public/favicon.ico",
    "productName": "OpenGameInstaller",
    "extends": null,
    "files": [
      "public/**/*",
      "./build/**/*"
    ],
    "win": {},
    "linux": {},
    "mac": {}
  },
  "scripts": {
    "build": "rollup -c --bundleConfigAsCjs",
    "build:ogiaddon": "cd ../packages/ogi-addon/ && tsup && cd ../real-debrid/ && tsup",
    "dev": "bun run build:ogiaddon && rollup -c -w --bundleConfigAsCjs",
    "start": "sirv public --no-clear",
    "electron": "wait-on http://localhost:8080 && tsc --p tsconfig.electron.json && electron ./build/main.js",
    "dev:server": "nodemon --watch server --ext ts,json --exec \"tsc --p tsconfig.addonserver.json && bun run --bun build-addons/dev-server.js\"",
    "electron-dev": "concurrently \"bun run dev\" \"bun run electron\"",
    "preelectron-pack": "bun run build && bun run build:ogiaddon && bunx tsc --p tsconfig.electron.json",
    "electron-pack": "electron-builder && 7z a -tzip ./dist/OpenGameInstaller-Portable.zip ./dist/win-unpacked/*",
    "check": "svelte-check --tsconfig ./tsconfig.svelte.json",
    "rebuild": "npm rebuild"
  },
  "dependencies": {
    "@ctrl/qbittorrent": "^8.2.0",
    "@electron/remote": "^2.1.2",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "axios": "^1.7.2",
    "cors": "^2.8.5",
    "electron-serve": "^1.1.0",
    "express": "^4.19.2",
    "ogi-addon": "*",
    "real-debrid-js": "*",
    "rollup-plugin-postcss": "^4.0.2",
    "webtorrent": "1.9.7",
    "ws": "^8.18.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@rollup/plugin-alias": "^5.1.0",
    "@rollup/plugin-commonjs": "^23.0.2",
    "@rollup/plugin-node-resolve": "^15.0.1",
    "@rollup/plugin-replace": "^5.0.7",
    "@rollup/plugin-typescript": "^11.1.6",
    "@tsconfig/svelte": "^5.0.4",
    "@types/sass": "^1.45.0",
    "@types/ws": "^8.5.11",
    "autoprefixer": "^10.4.19",
    "concurrently": "^7.5.0",
    "electron": "^31.3.0",
    "electron-builder": "^23.6.0",
    "nodemon": "^3.1.4",
    "postcss-loader": "^8.1.1",
    "rollup": "^3.2.3",
    "rollup-plugin-css-only": "^4.2.0",
    "rollup-plugin-livereload": "^2.0.5",
    "rollup-plugin-svelte": "^7.1.0",
    "rollup-plugin-terser": "^7.0.2",
    "sirv-cli": "^2.0.2",
    "svelte": "^3.52.0",
    "svelte-check": "^2.0.0",
    "svelte-preprocess": "^6.0.1",
    "tailwindcss": "^3.4.4",
    "ts-node": "^10.9.2",
    "tslib": "^2.0.0",
    "wait-on": "^6.0.1"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  }
}