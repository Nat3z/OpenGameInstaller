{
  "compileOnSave": true,
  "compilerOptions": {
    "outDir": "../../build",
    "baseUrl": ".",
    "typeRoots": ["node_modules/@types"],
    "target": "ES2022",
    "allowJs": true,
    "module": "ESNext",
    "sourceMap": true,
    "stripInternal": true,
    "lib": ["ES2022", "dom"],
    "moduleResolution": "bundler",
    "paths": {
      "ogi-addon/config": ["../../node_modules/ogi-addon/build/config/Configuration.d.mts"],
      "ogi-addon": ["../../node_modules/ogi-addon/build/main.d.mts"]
    },
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noEmitOnError": true,
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "skipLibCheck": true
  },
  "include": [".", "../typings"]
}
