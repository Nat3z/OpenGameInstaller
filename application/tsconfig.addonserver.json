{
  "compileOnSave": true,
  "compilerOptions": {
    "outDir": "./build-addons",
    "baseUrl": ".",
    "target": "ES2022",
    "module": "ESNext",
    "sourceMap": true,
    "stripInternal": true,
    "lib": ["es2022", "esnext", "dom"],
    "moduleResolution": "bundler",
    "paths": {
      "ogi-addon/config": ["./node_modules/ogi-addon/build/config/Configuration.d.mts"],
      "ogi-addon": ["./node_modules/ogi-addon/build/main.d.mts"]
    },
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noEmitOnError": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "isolatedModules": true
  },
  "include": ["./src/electron/server/**/*"],
  "exclude": ["node_modules"]
}
