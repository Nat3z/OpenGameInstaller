{
  "name": "ogi-addon",
  "module": "./build/main.mjs",
  "type": "module",
  "main": "./build/main.cjs",
  "version": "1.9.3",
  "exports": {
    ".": {
      "import": {
        "default": "./build/main.mjs",
        "types": "./build/main.d.mts"
      },
      "require": {
        "default": "./build/main.cjs",
        "types": "./build/main.d.cts"
      }
    },
    "./config": {
      "import": {
        "default": "./build/config/Configuration.mjs",
        "types": "./build/config/Configuration.d.mts"
      },
      "require": {
        "default": "./build/config/Configuration.cjs",
        "types": "./build/config/Configuration.d.cts"
      }
    }
  },
  "typings": "./build/main.d.mts",
  "author": {
    "name": "Nat3z",
    "email": "me@nat3z.com",
    "url": "https://nat3z.com/"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Nat3z/OpenGameInstaller",
    "directory": "packages/ogi-addon"
  },
  "dependencies": {
    "fuse.js": "^7.1.0",
    "ws": "^8.4.0",
    "zod": "^3.23.8"
  },
  "scripts": {
    "auto-build": "tsc -w",
    "build": "tsdown --config tsdown.config.js",
    "release": "bun run build && npm publish",
    "release-beta": "bun run build && npm publish --tag future"
  },
  "devDependencies": {
    "@types/minimatch": "^6.0.0",
    "@types/node": "^20.14.12",
    "@types/ws": "^8.4.0",
    "prettier": "^3.6.0",
    "tsdown": "^0.20.0-beta.4",
    "typescript": "^5.0.0"
  }
