  article {
    h1 {
      @apply text-4xl font-semibold border-b-2 border-slate-300 pb-2 pr-8 w-fit my-2;
    }
    h2 {
      @apply text-3xl font-semibold border-b-2 border-slate-300 pb-2 pr-8 w-fit my-2;
    }
    h3 {
      @apply text-2xl font-semibold;
    }
    p {
      @apply text-lg font-normal;
    }
    ul {
      @apply list-disc list-inside;
    }
    ol {
      @apply list-decimal list-inside;
    }
    code {
      @apply text-slate-800 rounded-md bg-slate-300 p-1;
    }
