      @apply text-blue-500 underline;
    }

    table {
      @apply w-full border-collapse;
    }
    th, td {
      @apply border border-slate-300 p-2;
    }
    th {
      @apply bg-slate-300;
    }
    @apply flex flex-col gap-2;
    
  }
</style>